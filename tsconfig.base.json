{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "NodeNext",
    "target": "esnext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "rootDir": "./",
    "baseUrl": "./",
    "strict": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "downlevelIteration": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true
  },
  "files": ["mod.ts"],
  "include": ["src"],
  "exclude": ["dist"]
}
